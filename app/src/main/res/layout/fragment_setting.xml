<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:leon="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的信息"
                android:padding="10dp"
                android:textSize="25sp"
                />
        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftText="用户名"
            android:layout_marginTop="20dp"/>
        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftText="密码" />
        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_citynum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftText="显示城市数量" />
        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftText="当前城市" />
        <EditText
            android:id="@+id/edit_city"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_focuscity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftText="关注城市" />
        <Spinner android:id="@+id/sp_focuscity"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="center">
        </Spinner>
        <EditText
            android:id="@+id/edit_focuscity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="退出"
            android:layout_gravity="center"
            android:backgroundTint="#EAE9E9"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">
        </Button>
    </LinearLayout>

</ScrollView>
